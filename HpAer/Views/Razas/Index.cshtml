@model IEnumerable<HpAer.Models.Raza>

@{
    ViewBag.Title = "Index";
}

<div class="textoTitulo">
    <h1>Razas</h1>
</div>


<p>
    <div class="label-button">
        <label>Agregar</label>
        <a href="@Url.Action("Create")" title="Agregar">
            <i type="button" class="btn btn-info glyphicon glyphicon-plus"> </i>
            <span class="sr-only">Create</span>
        </a>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estadoHab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaBaja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especy.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoHab)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaBaja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especy.nombre)
        </td>
        <td class="text-right">
            <a href="@Url.Action("Edit", new { id = item.Id })" title="Editar">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a> |

            <a href="@Url.Action("Details", new { id = item.Id })" title="Ver">
                <i class="glyphicon glyphicon-search"></i>
                <span class="sr-only">Delete</span>
            </a> |
            <a href="@Url.Action("Delete", new { id = item.Id })" title="Borrar">
                <i class="glyphicon glyphicon-remove"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
