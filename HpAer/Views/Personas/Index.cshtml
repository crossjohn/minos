@model IEnumerable<HpAer.Models.Persona>
@using Hpaer.Helpers

@{
    ViewBag.Title = "Index";
}

<div class="textoTitulo">
    <h1>Personas</h1>
</div>


<p>
    <div class="label-button">
        <label>Agregar</label>
        <a href="@Url.Action("Create")" title="Agregar">
            <i type="button" class="btn btn-info glyphicon glyphicon-plus"> </i>
            <span class="sr-only">Create</span>
        </a>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaNac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaAlta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaBaja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefonoCel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.puntaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsrId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaAlta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaBaja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefonoCel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.puntaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsrId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td class=text-center>
            @Html.DisplayFor(modelItem => item.voluntario)
        </td>
        <td class=text-center>
            @Html.DisplayFor(modelItem => item.estadohab)
        </td>

        <td class="text-right">
            <a href="@Url.Action("Edit", new { id = item.Id })" title="Editar">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a> |

            <a href="@Url.Action("Details", new { id = item.Id })" title="Ver">
                <i class="glyphicon glyphicon-search"></i>
                <span class="sr-only">Delete</span>
            </a> |
            <a href="@Url.Action("Delete", new { id = item.Id })" title="Borrar">
                <i class="glyphicon glyphicon-remove"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
