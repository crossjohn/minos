@model HpAer.Models.Pais

@{
    ViewBag.Title = "Create";
}

<div class="textoTitulo">
    <h1>Agregar</h1>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="label-button">
        <label>Pais</label>
    </div>
        <div class="form-horizontal">
                <hr />
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   <div class="form-group">
                       @Html.LabelFor(model => model.pais_nombre, "Pais *", htmlAttributes: new { @class = "control-label col-md-2" })
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.pais_nombre, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.pais_nombre, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                           <input type="submit" value="Aceptar" class="btn btn-default" /> |
                           <a href="@Url.Action("Index")" title="Cancelar" class="btn btn-default"> Cancelar </a>
                       </div>
                   </div>
               </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
