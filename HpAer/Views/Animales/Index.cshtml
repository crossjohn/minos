@model IEnumerable<HpAer.Models.Animal>

@{
    ViewBag.Title = "Index";
}

<div class="textoTitulo">
    <h1>Animales</h1>
</div>


<p>
    <div class="label-button">
        <label>Agregar</label>
        <a href="@Url.Action("Create")" title="Agregar">
            <i type="button" class="btn btn-info glyphicon glyphicon-plus"> </i>
            <span class="sr-only">Create</span>
        </a>
    </div>
</p>
<table class="table-font-chica">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raza.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.caracteristicas)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.fechaNac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaAlta)
        </th>

        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Tamanio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.enAdopcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.enTratamiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estadoHab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaBaja)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td> 
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Raza.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.caracteristicas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaAlta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tamanio.nombre)
        </td>
        <td class=text-center>
            @Html.DisplayFor(modelItem => item.enAdopcion)
        </td>
        <td class=text-center>
            @Html.DisplayFor(modelItem => item.enTratamiento)
        </td>
        <td class=text-center>
            @Html.DisplayFor(modelItem => item.estadoHab)
        </td>
        <td>
            @if (item.Files.Any(f => f.FileType == (Int32)HpAer.Models.FileType.Avatar))
            {
                <img src="~/File?id=@item.Files.First(f => f.FileType == (Int64)HpAer.Models.FileType.Avatar).FileId" alt="avatar" height="50" width="50" class="img-responsive" />

            }
        </td>
        <td class="text-right">
            <a href="@Url.Action("Edit", new { id = item.Id })" title="Editar">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a> |

            <a href="@Url.Action("Details", new { id = item.Id })" title="Ver">
                <i class="glyphicon glyphicon-search"></i>
                <span class="sr-only">Delete</span>
            </a> |
            <a href="@Url.Action("Delete", new { id = item.Id })" title="Borrar">
                <i class="glyphicon glyphicon-remove"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
